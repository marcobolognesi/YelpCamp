<% include ../partials/header %>

<div class="container">
    <header id="header_banner" class="jumbotron mt-3">  
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds</p>
            <p>
                <a class="btn btn-primary" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-lg-3 col-md-6">
                <div class="card mb-4">
                    <img class="card-img-index card-img-top" src="<%= campground.image %>">
                    <div class="card-body p-2">
                        <p class="h5 card-title"><%= campground.name %></p>
                        <p class="text-center mb-0">
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-sm">More Info</a>
                        </p>   
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>  

<% include ../partials/footer %>