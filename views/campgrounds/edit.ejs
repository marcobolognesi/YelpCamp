<% include ../partials/header %>

<div class="container">
    <h1 class="text-center">Campground <%= campground.name %></h1>

    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <!-- <div class="w-50 mx-auto"> -->
            <div class="row mt-4"> 
                <div class="col"></div>
                <div class="col-xl-5 col-lg-6 col-md-7 col-9">
                    <div class="form-group">
                        <input class="form-control " type="text" name="name" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control " type="number" name="price" value="<%= campground.price %>" min="0.10" step=".10">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" value="<%= campground.image %>">
                    </div>
                    <div class="form-group">
                        <!-- <input class="form-control" type="text" name="description" placeholder="description"> -->
                        <textarea class="form-control" name="description" id="" cols="" rows="5"><%= campground.description %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Submit</button>
                    </div>
                    <a href="/campgrounds">Go Back</a>
                </div>
                <div class="col"></div>
            </div>
    </form>
</div>

<% include ../partials/footer %>