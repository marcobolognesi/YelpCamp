<% include partials/header %>

<div class="container mx-auto">
    <div class="row justify-content-center">
        <form action="/register" onsubmit="return checkEmails();" method="POST">
            <div class="form-group">
                <h3 class="text-center">Sign Up</h3>
            </div>
            <div class="form-group">
                <input class="form-control" type="email" id="user1" name="username" placeholder="email" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="email" id="user2" name="repeat_username" placeholder="repeat email" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="password" required>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Sign Up</button>
            </div>
            <small id="error_message"></small>
        </form>
    </div>
</div>

<script>
function checkEmails(){
    var email_1 = document.getElementById("user1").value;
    var email_2 = document.getElementById("user2").value;
    if(email_1 !== email_2){
        document.getElementById("error_message").innerHTML = "The emails don't match, please check";
        return false;
    } else {
        return true;
    }
}
</script>


