<% include ../partials/header %>

<div class="container">
    <h1 class="text-center">Edit Comment</h1>

    <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <!-- <div class="w-50 mx-auto"> -->
            <div class="row mt-4"> 
                <div class="col"></div>
                <div class="col-xl-5 col-lg-6 col-md-7 col-9">
                    <div class="form-group">
                        <textarea class="form-control" name="comment[text]" id="" rows="5"><%= comment.text %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Submit</button>
                    </div>
                    <a href="/campgrounds">Go Back</a>
                </div>
                <div class="col"></div>
            </div>
    </form>
</div>

